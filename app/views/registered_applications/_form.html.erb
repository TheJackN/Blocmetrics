<%= simple_form_for @registered_application do |f| %>
  <% if registered_application.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(registered_application.errors.count, "error") %>.</h4>
      <ul>
        <% registered_application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, label: 'Application Name', required: true %>
  <%= f.input :url, label: 'Root URL beginning with "http://"', required: true %>
  <%= f.button :submit, class:'btn btn-success' %>
<% end %>
