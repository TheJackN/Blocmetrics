<h2 class="text-center">My Registered Applications</h2>
<% if policy(RegisteredApplication.new).create? %>
  <div class="text-right">
    <%= link_to "New Application", new_registered_application_path, class: 'btn btn-success' %>
  </div>
<% end %>
<br />
<div class="container">
  <div class ="row">
    <div class="col-md-8">
      <% @registered_applications.each do |app| %>
        <h4 class="media-heading">
          <% if @registered_applications.empty? %>
            No Applications Registered Yet!
          <% else %>
            <%= link_to app.name, app %>
          <% end %>
        </h4>
      <% end %>
    </div>
  </div>
</div>
